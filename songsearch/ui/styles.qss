QPushButton {
    padding: 4px 8px;
    margin: 2px;
}
QPushButton:hover {
    background-color: #e6e6e6;
}
QListWidget {
    border: 1px solid #cccccc;
    padding: 4px;
}
QLineEdit, QTextEdit {
    padding: 4px;
    border: 1px solid #cccccc;
}
QSlider::handle:horizontal {
    background-color: #5c5c5c;
    border-radius: 3px;
    width: 12px;
}
